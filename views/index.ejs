<!DOCTYPE html>
<html lang="en">

<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>

    <div class="container mt-3">
        <h1>Users Database</h1>
        <div class="mt-4 p-5 bg-secondary text-white rounded">
            <form class="was-validated">
                <div class="row">
                    <div class="mb-3 mt-3 col">
                        <label for="first">First name:</label>
                        <input class="form-control" id="first" placeholder="Enter first name" pattern="[A-Z][A-Za-z-]*"
                            onchange="currentAddedUser.first = document.getElementById('first').value;" required>
                    </div>
                    <div class="mb-3 mt-3 col">
                        <label for="last">Last name:</label>
                        <input class="form-control" id="last" placeholder="Enter last name" pattern="[A-Z][A-Za-z-]*"
                            onchange="currentAddedUser.last = document.getElementById('last').value;" required>
                    </div>
                </div>
                <div class="mb-3 mt-3">
                    <label for="email">Email:</label>
                    <input class="form-control" id="email" placeholder="Enter email"
                        pattern="[a-z0-9-_.]+@([a-z0-9]+\.)+[a-z]{2,4}"
                        onchange="currentAddedUser.email = document.getElementById('email').value;" required>
                </div>
                <div class="row">
                    <div class="mb-3 mt-3 col">
                        <label for="company">Company:</label>
                        <input class="form-control" id="company" placeholder="Enter company"
                            pattern="[A-Z][A-Za-z0-9-' ]*"
                            onchange="currentAddedUser.company = document.getElementById('company').value;" required>
                    </div>
                    <div class="mb-3 mt-3 col">
                        <label for="country">Country:</label>
                        <input class="form-control" id="country" placeholder="Enter country" pattern="[A-Z][A-Za-z-' ]*"
                            onchange="currentAddedUser.country = document.getElementById('country').value;" required>
                    </div>
                </div>
                <div class="mb-3 mt-3 col">
                    <button class="btn btn-primary" type="submit">Add user</button>
                </div>
            </form>
        </div>
        <div class="container mt-4">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Firstname</th>
                        <th>Lastname</th>
                        <th>Email</th>
                        <th>Company</th>
                        <th>Country</th>
                        <th>Created at</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i=0; i < users.length; i++) { %>
                        <tr id="<%= users[i].id %>">
                            <td><%= users[i].id %></td>
                            <td><%= users[i].first %></td>
                            <td><%= users[i].last %></td>
                            <td><%= users[i].email %></td>
                            <td><%= users[i].company %></td>
                            <td><%= users[i].country %></td>
                            <td><%= users[i].created_at %></td>
                            <td>
                                <button class="btn btn-warning" onclick="editForm(<%= users[i].id %>)">Edit</button>
                                <button class="btn btn-danger" onclick="deleteUser(<%= users[i].id %>)">Delete</button>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="javascripts/index.js"></script>

</body>

</html>